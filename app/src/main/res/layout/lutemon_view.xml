<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00BCD4"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageMon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtMonColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMonHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hp/Hp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMonExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x Exp"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/goToTrainingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go Training"
                android:textSize="10dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txtMonWonBattles"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Wins: x"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMonLostBattles"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Lost: x"
                android:textSize="18sp" />

        </LinearLayout>



    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>