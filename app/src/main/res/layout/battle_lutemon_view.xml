<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00BCD4"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/battleImageMon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/battleMonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/battleMonHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hp/Hp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/battleMonExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x Exp"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/battleMonWonBattles"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Wins: x"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/battleMonBattleLost"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Lost: x"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/battleMonId"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="ID: x"
                android:textSize="25dp"
                android:textColor="#FF0303"/>
        </LinearLayout>



    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>